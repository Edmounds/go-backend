.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 佣金统计 */
.summary-section {
  margin-bottom: 30rpx;
}

.summary-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  color: white;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.summary-item.small {
  margin-bottom: 0;
}

.summary-label {
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.summary-amount {
  font-size: 48rpx;
  font-weight: bold;
}

.summary-item.small .summary-amount {
  font-size: 32rpx;
}

.summary-row {
  display: flex;
  justify-content: space-around;
}

/* 筛选器 */
.filter-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.filter-item {
  display: flex;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 15rpx;
}

.picker {
  padding: 10rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
  text-align: center;
}

/* 佣金记录列表 */
.commission-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.commission-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.commission-item:last-child {
  border-bottom: none;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.commission-id {
  font-size: 24rpx;
  color: #999;
}

.commission-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #007aff;
}

.item-content {
  margin-bottom: 15rpx;
}

.commission-desc {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.commission-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commission-type {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.commission-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  color: white;
}

.commission-status.pending {
  background: #ff9500;
}

.commission-status.paid {
  background: #4cd964;
}

.commission-status.cancelled {
  background: #ff3b30;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

