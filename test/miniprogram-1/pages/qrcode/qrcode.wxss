/* pages/qrcode/qrcode.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录提示 */
.login-prompt {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.prompt-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: #666;
}

.login-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
}

/* 主要内容 */
.main-content {
  padding-bottom: 40rpx;
}

/* 区块样式 */
.section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  background: linear-gradient(45deg, #667eea, #764ba2);
  padding: 30rpx;
  text-align: center;
}

.section-title text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

/* 预设列表 */
.preset-list {
  padding: 20rpx;
}

.preset-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  margin-bottom: 15rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  border-left: 6rpx solid #667eea;
  transition: all 0.3s ease;
}

.preset-item:active {
  transform: scale(0.98);
  background: #e8eaff;
}

.preset-item:last-child {
  margin-bottom: 0;
}

.preset-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.preset-scene {
  font-size: 26rpx;
  color: #666;
  background: white;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
}

/* 表单项 */
.form-item {
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input, .picker {
  width: 100%;
  padding: 20rpx 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  background: white;
}

.picker {
  color: #333;
  display: flex;
  align-items: center;
  min-height: 80rpx;
}

.input-group {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.input-group .input {
  flex: 1;
}

.copy-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx 25rpx;
  font-size: 24rpx;
}

.help-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 开关项 */
.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.switch-item .label {
  margin-bottom: 0;
  flex: 1;
}

/* 颜色设置 */
.color-section {
  padding: 20rpx 30rpx;
  background: #f8f9ff;
}

.color-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.color-inputs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.color-input-item {
  flex: 1;
  text-align: center;
}

.color-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.color-input {
  width: 100%;
  padding: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  text-align: center;
  font-size: 26rpx;
}

.color-preview {
  width: 100%;
  height: 60rpx;
  border-radius: 10rpx;
  border: 2rpx solid #e0e0e0;
}

/* 操作按钮区 */
.action-section {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
}

.generate-btn {
  flex: 2;
  background: linear-gradient(45deg, #51cf66, #40c057);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.generate-btn[disabled] {
  background: #ccc;
}

.clear-btn {
  flex: 1;
  background: #ff6b6b;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 28rpx;
}

/* 二维码显示区域 */
.qrcode-section {
  background: white;
  border-radius: 20rpx;
  margin-top: 30rpx;
  overflow: hidden;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
}

.qrcode-header {
  background: linear-gradient(45deg, #51cf66, #40c057);
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.qrcode-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  color: white;
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.qrcode-container {
  padding: 40rpx;
  text-align: center;
  background: #f8f9fa;
}

.qrcode-image {
  width: 500rpx;
  height: 500rpx;
  border-radius: 20rpx;
  background: white;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.qrcode-info {
  padding: 30rpx;
  background: #f8f9ff;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  padding: 10rpx 20rpx;
  background: white;
  border-radius: 10rpx;
  border-left: 4rpx solid #667eea;
}

.info-item:last-child {
  margin-bottom: 0;
}

.qrcode-actions {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.preview-btn {
  background: #667eea;
  color: white;
}

.save-btn {
  background: #51cf66;
  color: white;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .qrcode-image {
    width: 400rpx;
    height: 400rpx;
  }
  
  .color-inputs {
    flex-direction: column;
    gap: 15rpx;
  }
}